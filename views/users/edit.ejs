<% layout('layouts/boilerplate') %> 

<div class="container justify-content-center align-items-center my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://res.cloudinary.com/pirrachodev/image/upload/v1665715619/YelpCamp/b7oubmncxj0ycmpszjei.jpg" 
                    alt="mountain"
                    class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">User Information</h5>
                    <form action="/users/<%= user._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" value="<%= user.username %>" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" value="<%= user.email %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid email.
                            </div>
                        </div>
                      <% if (currentUser && (currentUser.role == "MODERATOR" || currentUser.role == "ADMIN")) {%>
                        <div class="mb-3">
                            <label class="form-label" for="role">Role</label>
                            <select class="form-select" name="role" aria-label="select role" id="roleSelect">
                                <option value="USER">User</option>
                                <option value="MODERATOR">Moderator</option>
                                <option value="ADMIN">Administrator</option>
                            </select>
                        </div>
                      <% } %>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-success mx-2">Update</button>
                        </form>
                        <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
                          <!-- Button trigger modal -->
                          <button type="button" class="btn btn-danger mx-2" data-bs-toggle="modal" data-bs-target="#DeleteUser">
                            Delete
                          </button>
  
                          <!-- Modal -->
                          <div class="modal fade" id="DeleteUser" tabindex="-1" aria-labelledby="DeleteUserWarning" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h1 class="modal-title fs-5" id="DeleteUserWarning">Warning!</h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  Are you sure you want to delete this account? <br> This step cannot be undo!
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>