<% layout('/layouts/boilerplate') %>
<% currentPage = parseInt(currentPage); totalPages = parseInt(totalPages); %>
<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <a href="/campgrounds/<%=campground.id%>">
                    <% if (campground.images.length) {%> 
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                    <% } else { %> 
                        <img class="img-fluid" 
                        src="https://res.cloudinary.com/pirrachodev/image/upload/v1662004504/YelpCamp/wsjczux4lplrd59npshr.png" 
                        alt="default image">
                    <% } %> 
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><a class="text-decoration-none link-dark" href="/campgrounds/<%=campground.id%>"><%= campground.title %></a></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground.id%>">View <%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <div class="pagination2022">
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="<%=
            currentPage > 1
            ? 'page-item' 
            : 'page-item disabled' %>">
            <a class="page-link" href="/campgrounds?page=<%=currentPage - 1%>">Previous</a>
          </li>
          <% let liTags = totalPages <= 5 ? totalPages : 5 %>
          <% if (currentPage >= totalPages - liTags + 1) { %>
            <% for (let i = 1; i <= liTags; i++) { %>
              <li class="page-item 
              <%= (totalPages - liTags + i) === currentPage ? 'active' : '' %>">
                <a href="/campgrounds?page=<%=totalPages - liTags + i%>" class="page-link"><%= totalPages - liTags + i %></a>
              </li>
            <% } %>
          <% } else {%>
            <% for (let i = 1; i <= liTags; i++) { %>
              <li class="page-item
              <%= (currentPage - 1 + i) === currentPage ? 'active' : '' %> ">
                <a href="/campgrounds?page=<%=currentPage - 1 + i%>" class="page-link"><%= currentPage - 1 + i %></a>
              </li>
            <% } %>
          <% } %>
          <li class="<%=
             currentPage < totalPages
             ? 'page-item'
             : 'page-item disabled' %>">
             <a class="page-link" href="/campgrounds?page=<%=currentPage + 1%>">Next</a>
          </li>
        </ul>
      </nav>
    </div>


<script>
    //const mapToken = "<%- process.env['MAPBOX_TOKEN'] %>"; Replit
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
